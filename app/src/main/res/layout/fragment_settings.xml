        <TextView
            android:id="@+id/Weekly_Objective_Header"
            android:layout_width="146dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="200dp"
            android:text="Weekly Objectives:"
            app:layout_constraintBottom_toTopOf="@+id/divider4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <EditText
            android:id="@+id/Objective_1_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="(objective 1 text here)"
            app:layout_constraintEnd_toStartOf="@+id/Confirm_Objective_1_Button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/Objective_1_Header"
            app:layout_constraintTop_toBottomOf="@+id/Weekly_Objective_Header" />

        <TextView
            android:id="@+id/Objective_1_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
