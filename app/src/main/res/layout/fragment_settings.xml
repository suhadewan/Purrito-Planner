            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/Objective_2_Header"
            app:layout_constraintTop_toBottomOf="@+id/Objective_1_Text" />

        <EditText
            android:id="@+id/Objective_3_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="(objective 3 text here)"
            app:layout_constraintEnd_toStartOf="@+id/Confirm_Objective_3_Button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/Objective_3_Header"
            app:layout_constraintTop_toBottomOf="@+id/Objective_2_Text" />

        <Button
            android:id="@+id/Confirm_Objective_1_Button"
            android:layout_width="82dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/teal_200"
            android:text="Confirm"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/Objective_1_Text"
            app:layout_constraintTop_toBottomOf="@+id/Weekly_Objective_Header" />

        <Button
            android:id="@+id/Confirm_Objective_2_Button"
            android:layout_width="82dp"
