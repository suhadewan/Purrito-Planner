<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseHatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/Exit_Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/teal_700"
            android:text="X"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Pick_Hat_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:text="Pick your hat!"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/Exit_Button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Top_Hat_Image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/top_hat_thumbnail"
            app:layout_constraintEnd_toStartOf="@+id/Pirate_Hat_Image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <ImageView
            android:id="@+id/Pirate_Hat_Image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/pirate_hat_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/Top_Hat_Image"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <ImageView
            android:id="@+id/Jester_Cap_Image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/jester_hat_thumbnail"
            app:layout_constraintEnd_toStartOf="@+id/Tiara_Image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Top_Hat_Text" />

        <ImageView
            android:id="@+id/Tiara_Image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/tiara_origin_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/Jester_Cap_Image"
            app:layout_constraintTop_toBottomOf="@+id/Pirate_Hat_Text" />

        <ImageView
            android:id="@+id/Bow_Image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/bow_thumbnail"
            app:layout_constraintEnd_toStartOf="@+id/Nothing_Image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Jester_Cap_Text" />

        <ImageView
            android:id="@+id/Nothing_Image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/nothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/Bow_Image"
            app:layout_constraintTop_toBottomOf="@+id/Tiara_Text" />

        <TextView
            android:id="@+id/Top_Hat_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:text="Top Hat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Top_Hat_Image" />

        <TextView
            android:id="@+id/Pirate_Hat_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="Pirate Hat"
            app:layout_constraintStart_toEndOf="@+id/Top_Hat_Image"
            app:layout_constraintTop_toBottomOf="@+id/Pirate_Hat_Image" />

        <TextView
            android:id="@+id/Jester_Cap_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="Jester Cap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Jester_Cap_Image" />

        <TextView
            android:id="@+id/Tiara_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="94dp"
            android:text="Tiara"
            app:layout_constraintStart_toEndOf="@+id/Jester_Cap_Image"
            app:layout_constraintTop_toBottomOf="@+id/Tiara_Image" />

        <TextView
            android:id="@+id/Bow_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:text="Bow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Bow_Image" />

        <TextView
            android:id="@+id/Nothing_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="Nothing"
            app:layout_constraintStart_toEndOf="@+id/Bow_Image"
            app:layout_constraintTop_toBottomOf="@+id/Nothing_Image" />

        <ImageView
            android:id="@+id/Pirate_Hat_Lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="116dp"
            android:src="@drawable/lock"
            app:layout_constraintStart_toEndOf="@+id/Pirate_Hat_Text"
            app:layout_constraintTop_toTopOf="@+id/Pirate_Hat_Image" />

        <ImageView
            android:id="@+id/Jester_Lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="116dp"
            android:src="@drawable/lock"
            app:layout_constraintStart_toEndOf="@+id/Jester_Cap_Text"
            app:layout_constraintTop_toTopOf="@+id/Jester_Cap_Image" />

        <ImageView
            android:id="@+id/Tiara_Lock"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="116dp"
            android:src="@drawable/lock"
            app:layout_constraintStart_toEndOf="@+id/Tiara_Text"
            app:layout_constraintTop_toTopOf="@+id/Tiara_Image" />

        <ImageView
            android:id="@+id/Bow_Lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="116dp"
            android:src="@drawable/lock"
            app:layout_constraintStart_toEndOf="@+id/Bow_Text"
            app:layout_constraintTop_toTopOf="@+id/Bow_Image" />

        <View
            android:id="@+id/divider2"
            android:layout_width="409dp"
            android:layout_height="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.119" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>