<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseHatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/Exit_Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/teal_700"
            android:text="X"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Pick_Hat_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="216dp"
            android:layout_marginTop="16dp"
            android:text="@string/pick_hat"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/Exit_Button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Top_Hat_Image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/top_hat_thumbnail"
            app:layout_constraintEnd_toStartOf="@+id/Pirate_Hat_Image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <ImageView
            android:id="@+id/Pirate_Hat_Image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/pirate_hat_thumbnail"
            app:layout_constraintStart_toEndOf="@+id/Top_Hat_Image"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />


        <ImageView
            android:id="@+id/Jester_Cap_Image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/jester_hat_thumbnail"
            app:layout_constraintStart_toEndOf="@+id/Pirate_Hat_Image"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <ImageView
            android:id="@+id/Tiara_Image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/tiara_origin_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/Jester_Cap_Image"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <ImageView
            android:id="@+id/Bow_Image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/bow_thumbnail"
            app:layout_constraintStart_toEndOf="@id/Tiara_Image"
            app:layout_constraintTop_toBottomOf="@id/divider2" />

        <ImageView
            android:id="@+id/Nothing_Image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/nothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/Bow_Image"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <TextView
            android:id="@+id/Top_Hat_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/top_hat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Top_Hat_Image" />

        <TextView
            android:id="@+id/Pirate_Hat_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="4dp"
            android:text="@string/pirate_hat"
            app:layout_constraintStart_toEndOf="@+id/Top_Hat_Text"
            app:layout_constraintTop_toBottomOf="@+id/Pirate_Hat_Image" />

        <TextView
            android:id="@+id/Jester_Cap_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="4dp"
            android:text="@string/jester_cap"
            app:layout_constraintStart_toStartOf="@id/Pirate_Hat_Text"
            app:layout_constraintTop_toBottomOf="@+id/Jester_Cap_Image" />

        <TextView
            android:id="@+id/Tiara_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="4dp"
            android:text="@string/tiara"
            app:layout_constraintStart_toEndOf="@id/Jester_Cap_Text"
            app:layout_constraintTop_toBottomOf="@+id/Tiara_Image" />

        <TextView
            android:id="@+id/Bow_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="@string/bow"
            app:layout_constraintStart_toEndOf="@id/Tiara_Text"
            app:layout_constraintTop_toBottomOf="@+id/Bow_Image" />

        <TextView
            android:id="@+id/Nothing_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/nothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.456"
            app:layout_constraintStart_toEndOf="@+id/Bow_Text"
            app:layout_constraintTop_toBottomOf="@+id/Nothing_Image" />

        <ImageView
            android:id="@+id/Pirate_Hat_Lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/lock"
            app:layout_constraintStart_toEndOf="@+id/Pirate_Hat_Text"
            app:layout_constraintTop_toTopOf="@+id/Pirate_Hat_Image" />

        <ImageView
            android:id="@+id/Jester_Lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/lock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/Jester_Cap_Text"
            app:layout_constraintTop_toTopOf="@+id/Jester_Cap_Image" />

        <ImageView
            android:id="@+id/Tiara_Lock"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="76dp"
            android:src="@drawable/lock"
            app:layout_constraintStart_toEndOf="@+id/Tiara_Text"
            app:layout_constraintTop_toTopOf="@+id/Tiara_Image" />

        <ImageView
            android:id="@+id/Bow_Lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/lock"
            app:layout_constraintStart_toEndOf="@+id/Bow_Text"
            app:layout_constraintTop_toTopOf="@+id/Bow_Image" />

        <View
            android:id="@+id/divider2"
            android:layout_width="409dp"
            android:layout_height="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.447"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Pick_Hat_Header"
            app:layout_constraintVertical_bias="0.016" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>